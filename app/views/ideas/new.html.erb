<%= render partial: 'layouts/errors', locals: {object: @idea}%>

<%= form_for(@idea) do |f| %>
    <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>    
    </div>
    <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    </div>
    
    <p> Which type of idea does this belong to? </p>
        <%= f.collection_select :type_id, Type.alpha, Type.uniq, :id, :name, {:prompt => "Choose a type this belongs to"}%>

    <p>You could create your own type if you dont see one you like.<p>
    
    <div>
        <%= f.fields_for :type do |i| %>
            <%= i.label "Give your name a type" %><br>
            <%= i.text_field :name, Type.uniq%>
        <% end %>
        </div><br>
    <%= f.submit%>

    <% end %>

    