<h1>Sign up</h1>

<%= render partial: 'layouts/errors', locals: {object: @user}%>

<%= form_for(@user) do |f| %>
 <div>
    <%= f.label :first_name %>:
    <%= f.text_field :first_name %>
</div>
<div>
    <%= f.label :last_name %>:
    <%= f.text_field :last_name %>
</div>
<div>
    <%= f.label :username %>:
    <%= f.text_field :username %>
</div>    
<div>
    <%= f.label :emial %>:
    <%= f.email_field :email %>
</div>
<div>
    <%= f.label :password %>:
    <%= f.password_field :password %>
</div>
    <%= f.submit "Sign In"%>

<% end %>