<h1>Whats you comment for: <%= @comment.idea.title %> that was written by <%= @comment.idea.user.username  %> </h1>
<%= form_for(@comment) do |f| %>
<div>
    <%=f.label :rating %><br>
    <%=f.number_field :rating, min:0, max:5 %>
</div><br>

<div>
    <%=f.label "Comment" %><br>
    <%=f.text_area :content, size: "20x5" %>
</div>
<%= f.hidden_field :idea_id %>

<%= f.submit %>

<% end %>

